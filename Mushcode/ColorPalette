&COLORS Color Palette=[@@(System colors)][list(lnum(2),[iter(if(itext(0),lnum(8,15),lnum(0,7)),if(itext(0),%c0x00,%c0xEF)%c0X[printf($02s,pack(itext(0),16))][@@(NUMBERS->)]%b[printf($03^s,pack(itext(0),16))],,)]%cn,,%rSystem Colors:)][@@(Color cube, 6x6x6, first half)][list(lnum(0,5),iter(lnum(0,2),iter(lnum(0,5),[setq(c,pack(add(16,mul(itext(1),36),mul(itext(2),6),itext(0)),16),color)][if(match(10 11,r(color)),%c0xEF,%c0x00)]%c0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)%cn%b,,),,%RColor Cube\, 6x6x6:)][@@(Color Cube, Second Half)][list(lnum(0,5),iter(lnum(3,5),iter(lnum(0,5),[setq(c,pack(add(16,mul(itext(1),36),mul(itext(2),6),itext(0)),16),color)]%c0x00%c0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)%cn%b,,)%cn,,%b)][@@(Grayscale ramp)][list(lnum(2),[iter(if(itext(0),lnum(244,255),lnum(232,243)),[setq(c,pack(itext(0),16),color)][if(match(E8 E9 EA EB EC,r(color)),%c0xEF,%c0x00)]%c0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)],,%RGrayscale Ramp:)]
&CMD_+PALETTE Color Palette=$+palette:@pemit %#=[u(me/colors[ifelse(match(stripansi(%xrx%xn),x),-alt)])]
&COLORS-ALT Color Palette=[@@(System colors)][list(lnum(2),[iter(if(itext(0),lnum(8,15),lnum(0,7)),if(itext(0),%x0x00,%x0xEF)%x0X[printf($02s,pack(itext(0),16))][@@(NUMBERS->)]%b[printf($03^s,pack(itext(0),16))],,)]%xn,,%rSystem Colors:)][@@(Color cube, 6x6x6, first half)][list(lnum(0,5),iter(lnum(0,2),iter(lnum(0,5),[setq(c,pack(add(16,mul(itext(1),36),mul(itext(2),6),itext(0)),16),color)][if(match(10 11,r(color)),%x0xEF,%x0x00)]%x0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)%xn%b,,),,%RColor Cube\, 6x6x6:)][@@(Color Cube, Second Half)][list(lnum(0,5),iter(lnum(3,5),iter(lnum(0,5),[setq(c,pack(add(16,mul(itext(1),36),mul(itext(2),6),itext(0)),16),color)]%x0x00%x0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)%xn%b,,)%xn,,%b)][@@(Grayscale ramp)][list(lnum(2),[iter(if(itext(0),lnum(244,255),lnum(232,243)),[setq(c,pack(itext(0),16),color)][if(match(E8 E9 EA EB EC,r(color)),%x0xEF,%x0x00)]%x0X[printf($02s,r(color))][@@(NUMBERS->)][printf($4^s,r(color))],,)],,%RGrayscale Ramp:)]
&CREDITS Color Palette=Modified from RhostMUSH's 'help xtermcolor syntax' by squirrel@RhostMUSH
@Desc Color Palette=Shows a color palette with hex number codes for each color.%RSyntax: %x0x46+palette%xn%R%RTwo copies of the code exist in two attributes on this object.%R%T%x0x31colors%xn - \%c-substitutions for awesome games%R%T%x0xC7colors-alt%xn - \%x-substitutions for other games like RhostMUSH itself.%RFeel free to copy this object to your own games.
